<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:minHeight="120dp"
    android:orientation="vertical"
    android:padding="13dp" >

    <net.sarangnamu.common.fonts.RobotoLightTextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/dlgEmail" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label"
        android:background="@drawable/edt_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/edit"
        android:background="@drawable/btn_base_selector"
        android:text="@string/save"
        android:textSize="14sp" />

    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/label"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:background="#ececec" />
    
    <net.sarangnamu.common.fonts.RobotoLightTextView
        android:id="@+id/emailList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:textSize="12sp"
        android:text="@string/regAddr" />

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailList"
        android:animateLayoutChanges="true"
        android:paddingTop="2dp"
        android:orientation="vertical" />

</RelativeLayout>