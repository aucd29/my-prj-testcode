<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:scrollbarStyle="outsideOverlay" android:gravity="center"
	android:id="@+id/scrollView1" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/main7_off">
	<LinearLayout
		android:layout_width="fill_parent" android:orientation="vertical"
		android:layout_height="fill_parent" android:background="@drawable/mainbg">
		<ImageView android:id="@+id/mainTopImage"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/main_top" />
		
		<!-- main menu -->
		<LinearLayout android:layout_gravity="center" android:id="@+id/mainMenuLayout"
			android:layout_width="wrap_content" android:layout_height="match_parent"
			android:orientation="vertical" />

		<!-- banner -->
		<LinearLayout android:layout_gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:id="@+id/bannerLayout" />
		
		<!-- news -->
		<LinearLayout android:layout_gravity="center"
			android:background="@drawable/main_line" android:layout_width="wrap_content"
			android:layout_height="5.0dip" />
		<LinearLayout android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="57.0dip"
			android:paddingTop="6.0dip">
			<ImageView android:layout_width="wrap_content" android:src="@drawable/main_notice"
				android:layout_height="wrap_content" />
			<LinearLayout android:layout_gravity="left|center"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<TextView android:gravity="left|center" android:textSize="14.0dip"
					android:textColor="#ff000000" android:layout_width="match_parent"
					android:id="@+id/mainNoticeTxt" android:singleLine="true"
					android:layout_marginBottom="6.0dip" android:text="TextView"
					android:paddingRight="20.0dip" android:layout_height="wrap_content" />
				<TextView android:gravity="left|center" android:textSize="14.0dip"
					android:textColor="#ff000000" android:layout_width="match_parent"
					android:id="@+id/mainEventTxt" android:singleLine="true"
					android:layout_marginBottom="6.0dip" android:text="TextView"
					android:paddingRight="20.0dip" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_gravity="center"
			android:background="@drawable/main_line" android:layout_width="wrap_content"
			android:layout_height="5.0dip" />
			
		<!-- copyright -->
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center" android:gravity="center">
			<TextView android:layout_gravity="top|center" android:id="@+id/mainCopyright"
				android:layout_height="80.0dip" android:gravity="top|center"
				android:layout_width="fill_parent" android:text="@string/main_copyright"></TextView>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
