<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sarangnamu.d_day"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.sarangnamu.d_day.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.AlarmService"
            android:process=":remote" >
            <intent-filter>
                <action android:name="net.sarangnamu.common.service.ACTION.ALARMSERVICE" />
            </intent-filter>
        </service>

        <receiver
            android:name=".service.AlarmReceiver"
            android:process=":remote" >
            <intent-filter>
                <action android:name="net.sarangnamu.common.service.ACTION.ALARMRECEIVER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>