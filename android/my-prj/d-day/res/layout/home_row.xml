<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- net.sarangnamu.common.fonts.RobotoLight -->

        <TextView
            android:id="@+id/count"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:gravity="center|center_vertical"
            android:textColor="#525252"
            android:textSize="15sp"
            android:textStyle="bold" />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@id/count"
            android:textSize="16sp" />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/count"
            android:textColor="#b643f0"
            android:textSize="13sp" />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/reminder"
            style="@style/rowLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/date"
            android:background="#525252"
            />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/alarm"
            style="@style/rowLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/reminder"
            android:background="#525252"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-120dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/detail"
            style="@style/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#acacac"
            android:text="@string/detail"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/delete"
            style="@style/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ed594e"
            android:text="@string/delete"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>