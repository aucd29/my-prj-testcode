<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" >

        <!-- net.sarangnamu.common.fonts.RobotoLight -->

        <TextView
            android:id="@+id/emsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="RB023904923CN"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emsNum"
            android:text="office"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/office"
            android:text="detail"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="status"
            android:textColor="#ff4100"
            android:textSize="16sp" />

        <net.sarangnamu.common.fonts.RobotoLightTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/status"
            android:text="date"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-65dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/delete"
            style="@style/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8c8c8c"
            android:text="@string/delete"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>