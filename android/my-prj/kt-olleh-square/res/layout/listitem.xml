<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"  
 	android:orientation="horizontal"
 	>
 	<ImageView 
 		android:id="@+id/imageView"  
  		android:layout_width="wrap_content" 
  		android:layout_height="wrap_content"
  		android:padding="8dip" android:layout_gravity="top|left"/>
  	<LinearLayout
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"  
 		android:orientation="vertical"
 		android:layout_alignParentLeft="true"
 		>
		<TextView android:id="@+id/groupName" android:layout_height="wrap_content" android:textStyle="bold" android:padding="5dip" android:textSize="11pt" android:layout_width="fill_parent" /><TextView android:id="@+id/date" android:layout_height="wrap_content" android:textSize="7pt" android:layout_width="fill_parent" />  
	 	<TextView  
		 		android:id="@+id/contents"  
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:textColor="#ccf88107"
				android:textSize="8pt"
				android:textStyle="bold"
				android:paddingRight="4dip"
			    /> 
		 
	</LinearLayout>    
</LinearLayout>  
