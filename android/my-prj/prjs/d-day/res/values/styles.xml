<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="search">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="path">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="btnLayout">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    
    <style name="addLabelText">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="radio">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/rdo_add_bg_selector</item>
        <item name="android:textColor">@color/rdo_add_text_selector</item>
    </style>
    
    <style name="rowLabel">
        <item name="android:textSize">9sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#a8a8a8</item>
    </style>
</resources>