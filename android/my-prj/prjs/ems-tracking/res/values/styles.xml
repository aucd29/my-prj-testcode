<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dFont">
        <item name="android:typeface">sans</item>
    </style>

    <style name="title" parent="dFont">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="search" parent="dFont">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/dFont</item>
    </style>

    <style name="path" parent="dFont">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="btnLayout">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="widgetFont">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/background_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
</resources>