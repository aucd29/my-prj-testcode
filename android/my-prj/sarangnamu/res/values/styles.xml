<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="leftMenu">
        <item name="android:background">@drawable/rdo_left_menu_bg_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/rdo_left_menu_selector</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="leftBar">
        <item name="android:background">#5b5b5b</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="detailBar" parent="@style/leftBar">
        <item name="android:background">#ececec</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="detailTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="titleProgress">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="titleReload">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="date">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#5b5b5b</item>
    </style>

    <style name="url">
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:layout_marginLeft">5dp</item> -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:background">#262626</item>
    </style>

</resources>