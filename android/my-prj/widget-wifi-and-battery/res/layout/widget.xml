<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_vertical" >

    <ProgressBar
        android:id="@+id/prog"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <!--
        android:layout_width="@dimen/progressSize"
        android:layout_height="@dimen/progressSize"
        
        
        android:layout_width="@dimen/widgetSize"
        android:layout_height="@dimen/widgetSize"
    -->

    <LinearLayout
        android:id="@+id/widgetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14000000"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widgetLinearPadding"
        android:paddingTop="@dimen/widgetLinearPadding" >

        <TextView
            android:id="@+id/battery"
            style="@style/widgetFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/wifiStatus"
            style="@style/widgetFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/ip"
            style="@style/widgetFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="" />
    </LinearLayout>

</FrameLayout>