    <Button
        android:id="@+id/lockscreen_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Android4.1 LockScreen" />
    
   <Button
            android:id="@+id/lockscreen_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lockscreen_style_1"
        android:text="List View Animation Test" />

   <Button
        android:id="@+id/lockscreen_style_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lockscreen_listview"
        android:text="Go LockScreen" />
   
    <Button
        android:id="@+id/lockscreen_style_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lockscreen_style_go"
        android:text="LockScreen Cover" />
   
</RelativeLayout>
